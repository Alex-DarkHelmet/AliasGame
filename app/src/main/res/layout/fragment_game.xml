<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".scenes.fragments.GameFragment"
    tools:layout="@layout/fragment_game">

    <TextView
        android:id="@+id/random_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:padding="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/example_btn"
        tools:ignore="MissingConstraints,SmallSp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/example_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/random_question"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>